---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
const sortedProjects = [...projects].sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<Layout>
  <a href="/" class="btn-secondary mb-6 inline-flex items-center gap-2">&larr; Back to Home</a>
  <div class="mb-10 text-center">
    <h1 class="text-3xl font-bold">All Projects</h1>
    <p class="mt-3 text-gray-600 dark:text-gray-300">
      A closer look at the experiments, client collaborations, and personal builds I enjoyed crafting.
    </p>
  </div>
  <section class="grid gap-6 md:grid-cols-2">
    {sortedProjects.map((project) => (
      <a href={`/projects/${project.slug}`} class="card group h-full overflow-hidden">
        <img
          src={project.data.thumbnail}
          alt={project.data.title}
          loading="lazy"
          class="card-img"
        />
        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">{project.data.title}</h2>
          <p class="mt-2 text-gray-600 dark:text-gray-300">{project.data.description}</p>
          <div class="mt-3 flex flex-wrap gap-2">
            {project.data.tags.map((tag) => (
              <span class="pill">{tag}</span>
            ))}
          </div>
          <div class="mt-6 inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 transition group-hover:text-indigo-500 dark:text-indigo-400 dark:group-hover:text-indigo-300">
            <span class="btn-tertiary">View project</span>
            <span aria-hidden="true" class="transition group-hover:translate-x-0.5">&rarr;</span>
          </div>
        </div>
      </a>
    ))}
  </section>
</Layout>
